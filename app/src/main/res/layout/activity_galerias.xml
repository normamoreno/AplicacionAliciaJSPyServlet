<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    tools:context="mx.edu.utng.divinaphpsql.UtileriasActivity">
    <Button android:layout_margin="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/icon"
        android:id="@+id/calculadora" />

    <Button
        android:layout_margin="20dp"
        android:layout_toRightOf="@id/calculadora"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/i8"
        android:id="@+id/cronometro" />


    <Button
        android:layout_margin="20dp"
        android:layout_toRightOf="@id/cronometro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/imag2"
        android:id="@+id/btn_galeria_tres" />
</RelativeLayout>
    </ScrollView>
